<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".AdminDashBoard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:gravity="top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_add_fire"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:onClick="a_addroute"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:textAlignment="center"
            android:text="ADD STOP"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_manage"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:onClick="a_managedriver"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:text="MANAGE DRIVER"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_viewroute"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:onClick="a_viewroute"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:text="ADD ROUTE"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_viewroute"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:onClick="a_view1"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:text="VIEW ROUTE"
            android:textColor="#000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp">
    <Button
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_logout"
        android:gravity="center"
        android:onClick="a_LOGOUT"
        android:text="LOGOUT"
        android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>