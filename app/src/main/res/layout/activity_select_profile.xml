<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100px"
    android:paddingRight="200px"
    android:paddingLeft="200px"
    android:paddingBottom="100px"
    tools:context=".SelectProfileActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_driver"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:onClick="profile_driver"
                    android:text="D R I V E R"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_user"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:onClick="profile_user"
                    android:text="U S E R"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableTop="@drawable/ic_admin"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:onClick="profile_admin"
                    android:text="A D M I N"
                    android:textColor="#000" />

            </LinearLayout>


</LinearLayout>